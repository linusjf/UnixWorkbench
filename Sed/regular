#!/usr/bin/env bash
sed -n '/hello/p' hello.txt
printf "%s\n" abode bad bed bit bid byte body | sed -n '/^b.d/p'
printf "\n---------------\n"
echo 'a+b=c' > foo
sed -n '/a+b/p' foo
printf "\n---------------\n"
echo 'a+b=c' > foo
sed -E -n '/a\+b/p' foo
printf "\n---------------\n"
echo aab > foo
sed -n '/a\+b/p' foo
printf "\n---------------\n"
echo aab > foo
sed -E -n '/a+b/p' foo
printf "\n---------------\n"
echo "abcdef abcdef" | sed 's/abcdef/\U&/g'
printf "\n---------------\n"
echo "bab" | sed 's/a*b/\
&/g' | sed '1d'
printf "\n---------------\n"
echo "bab" | \
  sed -E 's/a*b/\n&/g' | \
  sed '1d'
printf "\n---------------\n"
echo "bab" | sed 's/a\?b/\
&/g' | sed '1d'
printf "\n---------------\n"
echo "bab" | \
  sed -E 's/a?b/\n&/g' | \
  sed '1d'
printf "\n---------------\n"
echo "abaaaababbbbbaaaaaabbbbbbb" \
  | sed 's/a\+b/\
&/g' | sed '1d'
printf "\n---------------\n"
echo "abaaaababbbbbaaaaaabbbbbbb" \
  | sed -E 's/a+b/\n&/g' \
  | sed '1d'
printf "\n---------------\n"
echo "abaaaababbbbbaaaaaabbbbbbb" \
  | sed -n 's/.*/&/p'
printf "\n---------------\n"
echo  \
  | sed -n 's/.*/&/p'
printf "\n---------------\n"
echo "main(int argc, char* argv)" \
  | sed -n 's/^main.*(.*)/&/p'
printf "\n---------------\n"
echo "#main(int argc, char* argv)" \
  | sed -n 's/^#/&/p'
printf "\n---------------\n"
echo "https://google.com/index/" \
  | sed -n 's/\/$/&/p'
printf "\n---------------\n"
echo "https://google.com/index/" \
  | sed -n 's/\/$/&/p'
printf "\n---------------\n"
echo "https://google.com/index/" \
  | sed 's/[a-zA-Z0-9]/\
&/g' | sed '1d'
printf "\n---------------\n"
echo "https://google.com/index/" \
  | sed -n 's/[^\  ]/&/p'
printf "\n---------------\n"
echo "https://google.com/index/" \
  | sed -n 's/[^  ]/&/p'
printf "\n---------------\n"
echo "Words are words" \
  | sed -n 's/[^\  ]\+/\
&/gp' | sed '1d'
printf "\n---------------\n"
echo "Words are words" \
  | sed -n -E 's/[^  ]+/\n&/gp' \
  | sed '1d'
printf "\n---------------\n"
printf "New\nNew\n" \
  | sed -n 'N;s,^\(.*\)\n\1$,&,pg'
printf "\n---------------\n"
printf "New\nNew\n" \
  | sed -n -E 'N;s,^(.*)\n\1$,&,pg'
printf "\n---------------\n"
echo "123456789A" | \
  sed 's/.\{9\}A$/&/'
printf "\n---------------\n"
echo "123456789A" | \
  sed -E 's/.{9}A$/&/'
printf "\n---------------\n"
echo "123456789ABCDEA" | \
  sed 's/.\{15\}A$/&/'
printf "\n---------------\n"
echo "123456789ABCDEA" | \
  sed -E 's/.{15}A$/&/'
printf "\n---------------\n"
printf "grey gray\n" | \
  sed 's/gr[ae]y/blue/g'
printf "\n---------------\n"
echo 1 | sed 's/[[:digit:]]/X/'
printf "\n---------------\n"
echo a | sed 's/[[:alpha:]]/X/'
printf "\n---------------\n"
echo a1 | sed 's/[[:alnum:]]/X/g'
printf "\n---------------\n"
echo "  " | sed 's/[[:blank:]]/X/g'
printf "\n---------------\n"
echo "" | sed 's/[[:cntrl:]]/X/g'
printf "\n---------------\n"
echo "'\"" | sed 's/[[:punct:]]/X/g'
printf "\n---------------\n"
echo AbCdeFgHiJkLmN | sed 's/[[:lower:]]/X/g'
